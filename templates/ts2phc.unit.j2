[Unit]
Description=Timestamp to PHC synchronization service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/sbin/ts2phc -c {{ ts2phc_clock }} -s {{ ts2phc_source }} -l {{ ts2phc_logging_level }} --leapfile /usr/share/zoneinfo/leap-seconds.list {{ ts2phc_extra_opts }}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
